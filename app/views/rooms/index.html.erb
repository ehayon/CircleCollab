<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Creator</th>
    <th>Members</th>
    <th>Turn</th>
    <th>Capacity</th>
    <th>Password</th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%=h room.name %></td>
    <td><%=h room.creator %></td>
    <td><%=h room.members %></td>
    <td><%=h room.turn %></td>
    <td><%=h room.capacity %></td>
    <td><%=h room.password %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New room', new_room_path %>